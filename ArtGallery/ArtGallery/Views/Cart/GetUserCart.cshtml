@using ArtGallery.Infrastructure.Data.Entities
@model ShoppingCart
@{
    ViewData["Title"] = "GetUserCart";
}
<div style="width:90%;margin:auto" class="mt-2">
    @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
    {
        <h5>My Cart</h5>

        <table class="table table-warning">
            <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Artist</th>
                <th>Unit Price(BGN)</th>
                <th>Total Price</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model.CartDetails)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>                     
                            <img src="@item.Product.Picture" style="width:80px;height:100px" />                      
                    </td>
                    <td>@item.Product.Artist.Name</td>
                    <td>@item.Product.Price X @item.Quantity</td> 
                    <td>@(item.Product.Price * item.Quantity)</td>
                    <td>
                        @* Increase Quantity button should be invisible if not enough stock*@
                        @if (item.Quantity < item.Product.Quantity)
                        {
                            <a class="btn btn-dark text-light" href="/Cart/AddItem?productId=@item.ProductId&&redirect=1">+</a>
                        }
                        else
                        {
                            <span style="border: 1px solid;padding: 8px 8px;color: red;border-radius: 5px;margin-right:4px">Out of stock </span>
                        }
                        @* Decrement button *@
                        <a class="btn btn-dark text-light" href="/cart/removeitem?productid=@item.ProductId">-</a>
                    </td>
                </tr>
            }
        </table>

        <div class="my-2">
            <h5>Total: </h5>
            <p class="text-danger"> @(Model.CartDetails.Select(item => item.Product.Price * item.Quantity).Sum()) BGN</p>
        </div>

        <div class="my-2">
            <a class="btn btn-dark" asp-controller="Product" asp-action="Index">Checkout</a>
        </div>

    }
    else
    {
        <h5>Cart is empty</h5>
    }
</div>